<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".Registration">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:textSize="30sp"
        android:textColor="#000"
        android:layout_marginTop="70dp"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:hint="Имя"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextregistration"/>
    <EditText
        android:textColor="#000"
        android:textColorHint="#000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:hint="Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextregistration"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/textViewRelativeregistration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30sp"
            android:text="Пол"
            android:textColor="#000"
            />

        <Button
            android:layout_toRightOf="@+id/textViewRelativeregistration"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonregistration"
            android:text="Мужчина"
            android:textColor="#03C03C"
            android:id="@+id/buttonRelativeregistration"/>
        <Button
            android:layout_toRightOf="@+id/buttonRelativeregistration"
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonregistration"
            android:textColor="#03C03C"
            android:text="Женщина"/>
        
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonregistration2"
        android:padding="15sp"
        android:text="Зарегистрироваться"
        android:onClick="RegistrationButton"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <Button
        android:layout_width="365dp"
        android:layout_height="75dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/vkbutton"
        android:padding="20sp"
        android:textColor="#FFF"
        android:textSize="18sp" />
    <TextView
        android:textColor="#000"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Шаг 2 из 2"
        android:textSize="20sp"/>
</LinearLayout>